@using EntityLayer.Concrete
@model List<Records>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>Ödünç İşlemleri | Kağıthane Açı Koleji Kutuphane</title>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ödünç Verme Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kitap Adı</th>
                            <th>Oğrenci Adı</th>
                            <th>Sayfa Sayısı</th>
                            <th>Alış Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RecordID</td>
                                <td>@item.Book.BookName</td>
                                <td>@item.StudenID</td>
                                <td>@item.Page</td>
                                <td>@item.PurchaseDate</td>
                                <td>@item.EndDate</td>
                                <td>@item.Status</td>
                                <td><a href="/Record/DeleteRecord/@item.RecordID" class="btn btn-outline-danger">Sil</a>  <a href="/Record/UpdateRecords/@item.RecordID" class="btn btn-outline-success">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Record/AddRecords/" class="btn btn-outline-info">Ödünç Ver</a>
            </div>
        </div>
    </div>
</div>

