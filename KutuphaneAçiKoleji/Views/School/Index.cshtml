@using EntityLayer.Concrete
@model List<school>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Okul Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Okul İsmi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SchoolID</td>
                                <td>@item.SchoolName</td>
                                <td>
                                    <a href="/School/DeleteSchool/@item.SchoolID" class="btn btn-outline-danger">Sil</a> <a href="/School/UpdateSchool/@item.SchoolID" class="btn btn-outline-success">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/School/AddSchool/" class="btn btn-outline-info">Yeni Oğrenci Ekle</a>
            </div>
        </div>
    </div>
</div>

