@model EntityLayer.Concrete.school
@{
    ViewData["Title"] = "AddSchool";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Ödünç Verme</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Okul Adı</label>
                    <span asp-validation-for="SchoolName" class="text text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Basım Evi Adını Giriniz" asp-for="SchoolName">
                </div>

                <button type="submit" class="btn btn-outline-primary">Ekle</button>
                <button class="btn btn-light">Geri Dön</button>
            </form>
        </div>
    </div>
</div>

