@model EntityLayer.Concrete.Book
@{
    ViewData["Title"] = "AddBooks";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Kitap Ekleme</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Kitap Adı</label>
                    <span asp-validation-for="BookName" class="text text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Kitap Adını Giriniz" asp-for="BookName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kitap Yazar İsmi</label>
                    <span asp-validation-for="BookWritingName" class="text text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Yazarın ismini Giriniz" asp-for="BookWritingName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kitap Sayfa Sayısı</label>
                    <span asp-validation-for="BookPage" class="text text-danger"></span>
                    <input type="number" class="form-control" id="exampleInputName1" placeholder="Lütfen Kitap sayfa sayısını Giriniz" asp-for="BookPage">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kitap Basım Tarih</label>
                    <span asp-validation-for="BookPublishingDate" class="text text-danger"></span>
                    <input type="date" class="form-control" id="exampleInputName1" placeholder="Lütfen Basım Tarihi Giriniz" asp-for="BookPublishingDate">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kitap Basım Evi</label>
                    <span asp-validation-for="BookPublishingHouse" class="text text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Basım Evi Adını Giriniz" asp-for="BookPublishingHouse">
                </div>

                <button type="submit" class="btn btn-outline-primary">Ekle</button>
                <button class="btn btn-light">Geri Dön</button>
            </form>
        </div>
    </div>
</div>

