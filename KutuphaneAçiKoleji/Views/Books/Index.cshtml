@using EntityLayer.Concrete
@model List<Book>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kitaplar Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kitap İsmi</th>
                            <th>Kitap Yazar İsmi</th>
                            <th>Kitap Sayfa Sayısı</th>
                            <th>Kitap Basım Tarihi</th>
                            <th>Kitap Basım Evi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.BookID</td>
                            <td>@item.BookName</td>
                            <td>@item.BookWritingName</td>
                            <td>@item.BookPage</td>
                            <td>@item.BookPublishingDate</td>
                            <td>@item.BookPublishingHouse</td>
                            <td><a href="/Books/DeleteBooks/@item.BookID" class="btn btn-outline-danger">Sil</a> <a href="/Books/UpdateBooks/@item.BookID" class="btn btn-outline-success">Düzenle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a href="/Books/AddBooks/" class="btn btn-outline-info">Yeni Kitap Ekle</a>
            </div>
        </div>
    </div>
</div>
