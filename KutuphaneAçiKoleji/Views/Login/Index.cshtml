@model KutuphaneAçiKoleji.Models.UserLoginViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Giriş Yap | Kağıthane Açı Koleji Kutuphane</title>

    <!-- Meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Style -->
    <link rel="stylesheet" href="~/snow-login-form-starter/css/style.css" type="text/css" media="all" />
</head>

<body>
    <!-- login form -->
    <section class="w3l-login">
        <div class="overlay">
            <div class="wrapper">
                <div class="logo">
                    <a class="brand-logo" href="index.html">Yönetici Giriş Sayfası</a>
                </div>
                <div class="form-section">
                    <h3>Giriş Yap</h3>
                    <h6>Lütfen Aşağıdaki Bilgileri Doldurunuz</h6>
                    <form action="#" method="post" class="signin-form">
                        <div class="form-input">
                            <input type="text" asp-for="Username" placeholder="Kullanıcı Adı" required="" autofocus>
                        </div>
                        <div class="form-input">
                            <input type="password" asp-for="Password" placeholder="Şifre" required="">
                        </div>
                        <label class="check-remaind">
                            <input type="checkbox">
                            <span class="checkmark"></span>
                            <p class="remember">Beni Hatırla</p>
                        </label>
                        <button type="submit" class="btn btn-primary theme-button mt-4">Giriş Yap</button>
                    </form>
                    <p class="signup">Bi hesabın yokmu ? o zaman <a href="/Register/SignUp" class="signuplink">Kayıt ol</a></p>
                </div>
            </div>
        </div>
        <div id='stars'></div>
        <div id='stars2'></div>
        <div id='stars3'></div>

        <!-- copyright -->
        <div class="copy-right">
            <p>&copy; Kağıthane Açı Koleji - @DateTime.Now.Year Tüm Hakları Saklıdır.</p>
        </div>
        <!-- //copyright -->
    </section>

    <!-- /login form -->
</body>

</html>
